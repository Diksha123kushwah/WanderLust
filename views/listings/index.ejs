<% layout("/layouts/boilerplate") %>

    <body class="listing-page">
        <h3 class="mt-3 mb-4">All Listing</h3>
        <!-- <form action="/listings/new" method="get">
        <button>Add Listing</button>
    </form> -->

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 wrap-List">
            <% for(let listing of allListings){ %>
                <a href="/listings/<%=listing._id%>" class="cardLink">
                    <div class="card col" style="width: 20rem;">
                        <img src="<%=listing.image%>" class="card-img-top" alt="Listing_image" style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%=listing.title%>
                                </b> <br>
                                &#x20b9;<%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %>

                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>