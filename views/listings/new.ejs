<% layout("/layouts/boilerplate") %>

    <body>
        <h3 class="mt-3" style="text-align: center;"><b>Create new listing</b></h3>
        <div class="row">
            <div class="col-8 offset-2">
                <form action="/listings" method="post">
                    <div class="mb-3">
                        <label for="form-title" class="form-label">Title</label>
                        <input type="text" id="form-title" class="form-control" name="Listing[title]"
                            placeholder="Add a cachy title">
                    </div>
                    <div class="mb-3">
                        <label for="form-description" class="form-label">Description</label>
                        <textarea name="Listing[description]" id="form-description" class="form-control"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="form-image" class="form-label">Image Link</label>
                        <input type="text" id="form-image" name="Listing[image]" class="form-control"
                            placeholder="enter image URL/Link">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="form-price" class="form-label">Price</label>
                            <input type="number" id="form-price" name="Listing[price]" class="form-control"
                                placeholder="1200">
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="form-country" class="form-label">Country</label>
                            <input type="text" id="form-country" name="Listing[location]" class="form-control"
                                placeholder="India">
                        </div>
                    </div>
                    <div class="mb-5">
                        <label for="form-location" class="form-label">Location</label>
                        <input type="text" id="form-location" name="Listing[country]" class="form-control"
                            placeholder="Jaipur, Rajsthan">
                    </div>
                    <button class="btn btn-dark mb-4">Add</button>
                </form>
            </div>
        </div>
    </body>

    </html>