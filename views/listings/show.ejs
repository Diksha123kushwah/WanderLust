<% layout("/layouts/boilerplate") %>
    <script>
        let Access_Token = "<%=process.env.MAP_TOKEN%>";
        let coordinatesL = <%-JSON.stringify(listing.geometry.coordinates) %>;
        let locationInfo = <%-JSON.stringify(listing.location) %>;
    </script>
    <style>
        .card2 {
            width: 36rem;
        }

        @media (max-width: 970px) {
            .card2 {
                width: 30rem;
            }
        }

        @media (max-width: 768px) {
            .card2 {
                width: 24rem;
            }
            .title {
                font-size: 1.5rem;
            }
        }
        @media(max-width: 540px){
            .card2{
                width: 18rem;
            }
        }
        @media(max-width: 440px){
            .title{
                font-size: 1.2rem;
            }
        }
        @media(max-width: 378px){
             .card2{
                width: 15rem;
            }
            .title{
                font-size: 1rem;
            }
        }
        @media(max-width: 330px){
             .card2{
                width: 12rem;
            }
            .title{
                font-size: 0.6rem;
            }
            #map{
                width:50vw;
                height:auto;
            }
        }
    </style>

    <body class="show-page">
        <div class="row mt-4 mt-2 show-Listing">
            <h2 class="col-8 offset-3 title">
                <%=listing.title %>
            </h2>
            <div class="card card2 col-6 offset-3">
                <img class="show-img" src="<%=listing.image.url%>" alt="Listing_Img">
                <div class="card-body">
                    <div class="card-text mb-2">
                        <i>Owned By <%=listing.owner.username %> </i><br>
                        <%=listing.description %> <br>
                            &#x20b9;<%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %>
                                <br>
                                <%=listing.location %>,&nbsp;<%=listing.country %>
                    </div>
                    <% if(curr && curr._id.equals(listing.owner._id)){%>
                        <div class="btns mt-4">
                            <form action="/listings/<%=listing._id%>/edit" method="get">
                                <button class="btn btn-dark res-btn">Edit Listing</button>
                            </form>
                            <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
                                <button class="btn btn-dark res-btn">Delete Listing</button>
                            </form>
                        </div>
                        <%}%>
                </div>
            </div>
            <% if(curr){%>
                <hr>
                <div class="offset-3 col-8 mb-3">
                    <h4>Leave a Review</h4>
                    <form action="/listings/<%=listing._id%>/review" method="post" novalidate class="needs-validation">
                        <div class="mt-2 mb-2">
                            <label for="rating" class="form-label">Rating</label>
                            <fieldset class="starability-slot">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                    checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>

                        </div>
                        <div class="mt-2 mb-2">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea name="review[comment]" id="comment" rows="3" cols="60" class="form-control"
                                required></textarea>
                            <div class="invalid-feedback">Please add some comment to submit</div>
                        </div>
                        <div class="mt-2 mb-2">
                            <button class="btn btn-outline-dark res-btn">Submit</button>
                        </div>
                    </form>
                </div>
                <%}%>

                    <%if(listing.reviews.length> 0){%>
                        <hr>
                        <div class="offset-3 col-8 mb-3">
                            <h4>All Reviews</h4>
                            <div class="row">
                                <% for(review of listing.reviews){%>
                                    <div class="card col-5 mb-3 ms-3" style="border:1px solid rgba(0, 0, 0, 0.144);">
                                        <div class="card-body">
                                            <h5 class="card-title">@<%=review.author.username%>
                                            </h5>
                                            <p class="starability-result card-text" data-rating="<%=review.rating%>">
                                            </p>
                                            <p class="card-text">
                                                <%=review.comment %>
                                            </p>
                                            <form
                                                action="/listings/<%=listing._id%>/review/<%=review._id%>?_method=DELETE"
                                                method="post">
                                                <% if(curr && curr._id.equals(review.author._id)){%>
                                                    <button class="btn btn-outline-danger res-btn">Delete</button>
                                                    <%}%>
                                            </form>
                                        </div>
                                    </div>

                                    <%}%>
                            </div>
                        </div>
                        <%}%>

                            <hr>
                            <div class="offset-3 col-8 mb-3">
                                <h4>Where you'll be</h4>
                                <div id="map"></div>
                            </div>
        </div>
        <script src="/js/map.js"></script>
    </body>

    </html>